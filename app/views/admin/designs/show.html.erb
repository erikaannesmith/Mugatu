Title: <%= @design.title %>
Description: <%= @design.description %>
Image URL: <%= image_tag @design.image.url %>
Price Range: <%= @design.price_range %>
Due Date: <%= @design.due_date %>
Created At: <%= @design.created_at %>

<% if @design.status == 'pending' || @design.status == 'declined' %>
  <%= link_to "Approve", admin_approve_design_path(@design) %>
<% end %>
<% if @design.status == 'pending' || @design.status == 'active' %>
  <%= link_to "Decline", admin_decline_design_path(@design) %>
<% end %>