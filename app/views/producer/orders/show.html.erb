<div class="order-card">
  <h1>Order #<%= @order.id %></h1>
  <p><strong>Design:</strong> <%= link_to @order.design.title, designer_design_path(current_user, @order.design) %></p>
  <p><strong>Designer:</strong> <%= link_to @order.design.user.name, producer_user_path(current_user, @order.design.user) %></p>
  <p><strong>Application ID:</strong> <%= link_to @order.application.id, designer_design_application_path(current_user, @order.design, @order.application) %></p>
  <p><strong>Price:</strong> <%= number_to_currency(@order.price) %></p>
  <p><strong>Due Date:</strong> <%= @order.due_date.strftime("%B %d, %Y") %></p>
  <p><strong>Created At:</strong> <%= @order.created_at.to_formatted_s(:long) %></p>
  <p><strong>Status:</strong> <%= @order.status.capitalize %></p>
  <p><%= cl_image_tag(@order.design.image_url(:standard)) %></p>

  <% if @order.open? %>
    <div class="action-buttons">
    <%= link_to "Print Shipping Label", producer_label_path(@order), class: 'btn btn-info' %>    
    <%= link_to "Mark Order as 'Shipped'!", producer_ship_order_path(@order), class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

